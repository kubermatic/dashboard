{
  "ignore": [
    "*", ".git", ".github", ".idea", "docs", "vendor",
    "**/*.json", "**/*.yaml", "**/*.svg", "**/*.txt", "**/*.md"
  ],
  "license": "license-header.txt",
  "defaultFormat": {
    "eachLine": {
      "prepend": "# "
    },
    "append": ""
  },
  "licenseFormats": {
    "go|ts|js|scss": {
      "eachLine": {
        "prepend": "// "
      },
      "append": ""
    },
    "html": {
      "prepend": "<!--",
      "append": "-->"
    }
  },
  "trailingWhitespace": "TRIM"
}
